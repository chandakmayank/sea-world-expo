---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Sample exhibitor data - replace with actual data
const exhibitors = [
{
    name: "Wibit Sports - The World Leader in Floating Waterparks",
    logo: "/exhibitors/wibit.jpeg",
    description: "We create custom, modular water parks that are quick to install, easy to scale and designed to maximize guest engagement and revenue â€“ backed by almost 30 years of global success.",
    website: "https://www.wibitsports.com",
    category: "Water Sports"
  },
  {
    name: "Reef Island",
    logo: "/exhibitors/reef_island.jpeg",
    description: "Located on Manama's northern shore, and minutes away from the new Bahrain Financial Harbour, Reef Island is ideally situated in the heart of Manama, the Gulf's, and one of the worlds, fastest growing financial centres. Reef Island offers its residents, and guests, all the convenience of easy access to a bustling cosmopolitan city complimented with the tranquility of a tropical island getaway. ",
    website: "https://www.reef-island.com",
    category: "Luxury Living"
  },
  {
    name: "Reef Club House",
    logo: "/exhibitors/reef_club_house.jpeg",
    description: "The Clubhouse is a vibrant hub of lifestyle amenities placing you at the heart of a world where dining, well-being, leisure, socializing and relaxation are all yours in luxury surroundings. It also has a playroom area where a sphere of entertainment and educational fun will keep younger guests amused in a safe and engaging environment",
    website: "https://www.reef-island.com/clubhouse",
    category: "Lifestyle"
  },
  {
    name: "AMIT Marine Limited",
    logo: "/exhibitors/amit-marine-tech.png",
    description: "AMIT Marine Limited (AML), a proud subsidiary of the renowned AMIT International Group, has been at the forefront of delivering top-tier marine solutions since 1981. With new operational bases in Saudi Arabia and Bahrain, AML specializes in leading marine technologies for both leisure and commercial markets. Our expertise spans marine engines, automation & control systems, satellite communication, navigation, safety, and diving equipment. We are the exclusive dealers of Mercury Marine Engines in KSA and Bahrain.",
    website: "https://amitmarineltd.com",
    category: "Marine Technologies"
  },
  {
    name: "Divers Island",
    logo: "/exhibitors/divers island-1.png",
    description: "Professional diving certification center offering PADI courses, underwater photography workshops, and marine conservation programs.",
    website: "#",
    category: "Diving"
  },
  {
    name: "Al Junaid Fishing Tools",
    logo: "/exhibitors/aljunaid fishing-1.png",
    description: "Al Junaid Fishing Tools is a Bahraini company that specializes in the production of fishing tools and equipment.",
    website: "https://www.instagram.com/aljunaidfishing/",
    category: "Marine Supplies"
  }
];
---

<Layout>
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-ocean-800 to-ocean-900 text-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Our Exhibitors
        </h1>
        <p class="text-xl text-ocean-100 leading-relaxed">
          Discover the innovative companies and organizations showcasing the latest in marine technology, 
          conservation, and ocean-related services at SEA WORLD EXPO 2025.
        </p>
      </div>
    </div>
  </section>

  <!-- Exhibitors Grid -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {exhibitors.map((exhibitor) => (
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2 overflow-hidden group">
            <!-- Logo Section -->
            <div class="h-40 bg-gradient-to-br from-ocean-50 to-ocean-100 flex items-center justify-center p-8">
              <div class="w-50 h-20 bg-white rounded-lg shadow-md flex items-center justify-center">
                <img 
                  src={exhibitor.logo} 
                  alt={`${exhibitor.name} logo`}
                  class="max-w-full max-h-full object-contain"
                  onerror="this.src='/SWE-logo.png'"
                />
              </div>
            </div>
            
            <!-- Content Section -->
            <div class="p-6">
              <div class="mb-3">
                <span class="inline-block px-3 py-1 bg-ocean-100 text-ocean-800 text-sm font-medium rounded-full">
                  {exhibitor.category}
                </span>
              </div>
              
              <h3 class="text-xl font-bold text-ocean-900 mb-3 group-hover:text-ocean-700 transition-colors">
                {exhibitor.name}
              </h3>
              
              <p class="text-gray-600 leading-relaxed mb-4 text-sm">
                {exhibitor.description}
              </p>
              
              <a 
                href={exhibitor.website}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-ocean-600 text-white rounded-lg hover:bg-ocean-700 transition-colors text-sm font-medium"
              >
                Visit Website
                <i class="fas fa-external-link-alt ml-2 text-xs"></i>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Custom hover effects */
  .group:hover .group-hover\:text-ocean-700 {
    color: #035aa1;
  }
</style>
