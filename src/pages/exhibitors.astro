<Layout>
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 bg-gradient-to-br from-ocean-800 to-ocean-900 text-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Our Exhibitors
        </h1>
        <p class="text-xl text-ocean-100 leading-relaxed">
          Discover the innovative companies and organizations showcasing the latest in marine technology, 
          conservation, and ocean-related services at SEA WORLD EXPO 2026.
        </p>
      </div>
    </div>
  </section>

  <!-- Exhibitors Grid -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {exhibitors.map((exhibitor) => (
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2 overflow-hidden group">
            <!-- Logo Section -->
            <div class="h-60 flex items-center justify-center p-8">
              <div class="w-50 h-40 bg-white flex items-center justify-center">
                <img 
                  src={exhibitor.logo} 
                  alt={`${exhibitor.name} logo`}
                  class="max-w-full max-h-full object-contain"
                  onerror="this.src='/SWE-logo.png'"
                />
              </div>
            </div>
            
            <!-- Content Section -->
            <div class="p-6">
              <div class="mb-3">
                <span class="inline-block px-3 py-1 bg-ocean-100 text-ocean-800 text-sm font-medium rounded-full">
                  {exhibitor.category}
                </span>
              </div>
              
              <h3 class="text-xl font-bold text-ocean-900 mb-3 group-hover:text-ocean-700 transition-colors">
                {exhibitor.name}
              </h3>
              
              <p class="text-gray-600 leading-relaxed mb-4 text-sm">
                {exhibitor.description}
              </p>
              
              <a 
                href={exhibitor.website}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-ocean-600 text-white rounded-lg hover:bg-ocean-700 transition-colors text-sm font-medium"
              >
                Visit Website
                <i class="fas fa-external-link-alt ml-2 text-xs"></i>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>

