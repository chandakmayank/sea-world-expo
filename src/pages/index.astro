---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Exhibits from '../components/Exhibits.astro';
import Schedule from '../components/Schedule.astro';
import Packages from '../components/Packages.astro';
import Partners from '../components/Partners.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Header />
  <Hero />
  <About />
  <Exhibits />
  <Schedule />
  <Packages />
  <Partners />
  <Contact />
  <Footer />
  
  <button
    id="to-top-button"
    class="fixed bottom-6 right-6 z-50 p-3 bg-ocean-800 text-white rounded-full shadow-lg opacity-0 invisible transition-all duration-300 hover:bg-ocean-700"
    aria-label="Back to top"
  >
    <i class="fas fa-chevron-up h-6 w-6"></i>
  </button>
</Layout>

<script>
  const toTopButton = document.getElementById('to-top-button');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 500) {
      toTopButton?.classList.remove('opacity-0', 'invisible');
      toTopButton?.classList.add('opacity-100', 'visible');
    } else {
      toTopButton?.classList.add('opacity-0', 'invisible');
      toTopButton?.classList.remove('opacity-100', 'visible');
    }
  });
  
  toTopButton?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
</script>