---

<section id="schedule" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-ocean-900 mb-4">Event Schedule</h2>
      <p class="text-lg text-gray-700 max-w-3xl mx-auto">
        Join us for four days of exciting events, presentations, and exhibitions
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {scheduleItems.map((day) => (
        <div class="bg-ocean-50 rounded-lg overflow-hidden shadow border-t-4 border-ocean-500">
          <div class="bg-ocean-700 py-4 px-6">
            <h3 class="text-white font-bold text-xl">{day.date}</h3>
            <p class="text-ocean-100">{day.day}</p>
          </div>
          <div class="p-6">
            <ul class="space-y-4">
              {day.events.map((event) => (
                <li class="border-b border-ocean-100 pb-4 last:border-b-0 last:pb-0">
                  <span class="text-ocean-800 font-semibold block">{event.time}</span>
                  <h4 class="text-lg font-medium text-ocean-900">{event.title}</h4>
                  <p class="text-gray-600 text-sm">{event.description}</p>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <div class="inline-block bg-ocean-50 rounded-lg px-6 py-4 border-l-4 border-teal-500">
        <span class="text-ocean-900 font-medium">Exhibition Hours: 10:00 AM - 10:00 PM</span>
      </div>
    </div>
  </div>
</section>