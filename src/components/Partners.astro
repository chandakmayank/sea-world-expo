---

<section id="sponsors" class="py-16 bg-white border-t border-b border-gray-200">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-ocean-900 mb-4">
        Our Partners
      </h2>
      <p class="text-lg text-gray-700 max-w-3xl mx-auto">
        Proud to work with leading organizations dedicated to marine innovation
        and conservation
      </p>
    </div>

    <!-- Partners Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-6xl mx-auto">
      {
        partners.map((partner) => (
          <div class="group relative p-8 hover:scale-105 transition-transform duration-300">
            <div class="flex flex-col items-center justify-center h-full min-h-[120px]">
              <a
                href={partner.website}
                target="_blank"
                rel="noopener noreferrer"
                class="block w-full h-full flex items-center justify-center"
              >
                <img
                  src={partner.logo}
                  alt={`${partner.name} logo`}
                  class="max-w-full max-h-24 object-contain filter grayscale group-hover:grayscale-0 transition-all duration-300"
                />
              </a>
              
              <!-- Category badge - only visible on hover -->
              <div class="absolute bottom-2 left-1/2 transform -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="inline-block px-3 py-1 text-xs font-medium bg-ocean-900 text-white rounded text-center">
                  {partner.category}
                </span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
