<section id="exhibits" class="py-20 bg-ocean-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-ocean-900 mb-4">Exhibit Categories</h2>
      <p class="text-lg text-gray-700 max-w-3xl mx-auto">
        Discover a diverse range of marine-related exhibits across these eight specialized categories
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {categories.map((category) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
          <div class="p-6 flex flex-col items-center">
            <div class="mb-4 w-16 h-16 rounded-full bg-ocean-100 flex items-center justify-center">
              <i class={`${category.icon} text-ocean-600 text-2xl`}></i>
            </div>
            <h3 class="text-xl font-semibold text-ocean-800 mb-3">{category.title}</h3>
            <p class="text-gray-600 text-center leading-relaxed">{category.description}</p>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Prominent CTA Button -->
    <div class="text-center mt-12">
      <a 
        href="/exhibitors"
        class="inline-flex items-center px-8 py-4 bg-ocean-600 text-white text-lg font-semibold rounded-lg hover:bg-ocean-700 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1"
      >
        View All Exhibitors
        <i class="fas fa-arrow-right ml-3"></i>
