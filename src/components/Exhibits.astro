  {
    title: "Diving",
    icon: "fa-solid fa-certificate",
    description: "Explore diving equipment, training, and certification from leading providers."
  },
  {
    title: "Water Sports",
    icon: "fa-solid fa-person-swimming",
    description: "Discover the latest in water sports equipment, technology, and adventures."
  },
  {
    title: "Fishing",
    icon: "fa-solid fa-fish-fins",
    description: "Connect with fishing charters, gear manufacturers, and sustainable fishing practices."
  },
  {
    title: "Sea Tourism",
    icon: "fa-solid fa-ship",
    description: "Explore destinations, cruises, and underwater experiences for marine tourism."
  },
  {
    title: "Boats & Yachts",
    icon: "fa-solid fa-sailboat",
    description: "See the latest marine vessels, technologies, and luxury experiences."
  },
  {
    title: "Environment Protection",
    icon: "fa-solid fa-cloud-sun",
